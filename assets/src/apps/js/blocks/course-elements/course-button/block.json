{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "learnpress/course-button",
	"title": "Course Button",
	"category": "learnpress-course-elements",
	"icon": "button",
	"description": "Renders template Button Course PHP templates.",
	"textdomain": "learnpress",
	"keywords": ["button single course", "learnpress"],
	"usesContext": ["lpCourseData"],
	"supports": {
		"multiple": false,
		"align": ["wide", "full"],
		"html": false,
		"typography": {
			"fontSize": true,
			"__experimentalDefaultControls": { "fontSize": true }
		},
		"color": {
			"background": true,
			"text": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"width": true,
			"__experimentalDefaultControls": {
				"width": false,
				"color": false,
				"radius": false
			}
		},
		"spacing": {
			"padding": true,
			"content": true,
			"__experimentalDefaultControls": {
				"padding": false,
				"content": true
			}
		}
	}
}
